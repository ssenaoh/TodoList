<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/fragment_all_tev_create_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_all_create_task"
            android:gravity="center"
            android:textSize="@dimen/title_normal"
            android:layout_alignParentTop="true"
            android:paddingVertical="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_all_rec_all_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fragment_all_tev_create_task" />
    </RelativeLayout>

</layout>